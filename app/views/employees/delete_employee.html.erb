
<div>
  <h1>Deleting Employee</h1>
  <h3>Are you sure you want to Delete this Employee?</h3>
  <br/>
  <%= form_for @employee, html: {class: "form-horizontal",multipart: true} do |form| %>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          First Name:
        </label>
        <div class="col-sm-10">
          <%= form.text_field :firstname, placeholder: 'Enter First Name', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Last Name:
        </label>
        <div class="col-sm-10">
          <%= form.text_field :lastname, placeholder: 'Enter Last Name', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Has Passport:
        </label>
        <div class="col-sm-10">
          <div class=“form-check”>
            <%= form.check_box :haspassport, { class: 'form-check-input' } %>
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Salary:
        </label>
        <div class="col-sm-10">
          <%= form.text_field :salary, placeholder: 'Enter Salary', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Birthdate:
        </label>
        <div class="col-sm-10">
          <%= form.date_field :birthdate, class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Hire Date:
        </label>
        <div class="col-sm-10">
          <%= form.date_field :hiredate, class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <legend class="col-form-label col-sm-2 pt-0">Gender:</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <%= form.radio_button :gender, 'Male', checked: true, data: {toggle: 'radio'}, class: 'form-check-input', id: 'male' %>
            <label class="form-check-label" for="male">
              Male
            </label>
          </div>
          <div class="form-check">
            <%= form.radio_button :gender, 'Female', data: {toggle: 'radio'}, class: 'form-check-input', id: 'female' %>
            <label class="form-check-label" for="female">
              Female
            </label>
          </div>
        </div>
      </div>
    </fieldset>
    
    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Notes:
        </label>
        <div class="col-sm-10">
          <%= form.text_area :notes, placeholder: 'Enter Notes', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Email:
          <span class="star">*</span>
        </label>
        <div class="col-sm-10">
          <%= form.email_field :email, autofocus: true, placeholder: 'Enter Email', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Phone Number:
          <span class="star">*</span>
        </label>
        <div class="col-sm-10">
          <%= form.text_field :phone, autofocus: true, placeholder: 'Enter Phone Number', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <%= form.submit 'Delete Record', class: "btn btn-primary" %>
    <a href="<%= employees_path %>">Back To Employee List</a>
  <% end %>
</div>